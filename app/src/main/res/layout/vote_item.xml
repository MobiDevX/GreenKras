<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="?attr/bgGrey"
    android:layout_marginStart="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:textColor="?attr/textColor"
            android:id="@+id/park_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Парк Юнатов"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Large">
        </TextView>
        <TextView
            android:textColor="?attr/textColor"
            android:id="@+id/vote_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_below="@id/park_title"
            android:text="Проголосовало X человек">
        </TextView>
        <TextView
            android:textColor="?attr/textColor"
            android:id="@+id/login_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_below="@id/vote_count"
            android:text="Добавил пользователь:">
        </TextView>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_arrow"></ImageView>




    </RelativeLayout>
</androidx.cardview.widget.CardView>